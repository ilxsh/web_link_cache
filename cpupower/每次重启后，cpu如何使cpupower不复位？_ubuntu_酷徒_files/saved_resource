	//打印
	$('#print_article').on('click', function() {
		var code="<body onload=window.print()>"
		  code+=$("#article_subject").html();
		  code+="<br><br><br>";
		  code+=$("#article_html_content").html();
		  code=code.toUpperCase();
		  code=code.toLowerCase();
		  document.open();
		  document.write(code);
		  document.close();
	});	
	//发布评论
	$('#insertUserMessage').on('click', function() {
	   var checkcode = $('#checkcode').val();
	   var plmessage = $('#plmessage').val();
	   var plaid	 = $('#plaid').val();
	   var plauthor	 = $('#plauthor').val();
	   if(plmessage.length<1) {
		   bootbox.alert("评论不能为空,请填写内容.");
		   return false;
	   }else if(checkcode.length<1){
		   bootbox.alert("你必须填写验证码.");
		   return false;
	   }
		$.ajax({                     
			type: "POST",                           
			url: "/article/pl.php",                              
			data: "action=dowrite&plaid="+ plaid +"&checkcode="+ checkcode +"&plmessage="+plmessage,
			'success':function(msg){
					if(msg == 'error'){
						bootbox.alert("对不起,你填写的验证码错误,请重新填写.");
						$("#regimg").attr("src","/images/authcode/show.php?sid="+getTime());
						return false;
					}else{
						//写入数据成功,不刷新页面加载消息
						var userMessageDiv=document.createElement("ajaxMessageTemplet");
						msg=$("#ajaxMessageTemplet").html();
						//alert(msg);
						
						msg1=plmessage;
						//alert(msg1);
						msg1=msg1.replace(/</ig,"&lt;");
						//alert(msg1);
						msg1=msg1.replace(/\r\n/ig,"<br/>");
						//alert(msg1);
						
						msg=msg.replace("userMessage",msg1);
						var messageCount=Math.floor($("#messageCount").val())+1;
						$("#messageCount").val(messageCount);
						
						//alert(messageCount);
						msg=msg.replace("messageCount",messageCount);
						
						//alert(msg);
						userMessageDiv.innerHTML=msg;
						
						var addMsgDiv=document.getElementById("ajaxAddUserMessage");
						//alert(addMsgDiv);
						var showMsgDiv=document.getElementById("ajaxAddUserMessageBottom");
						showMsgDiv.innerHTML=addMsgDiv.innerHTML+showMsgDiv.innerHTML;
						addMsgDiv.innerHTML="";
						addMsgDiv.innerHTML=msg;
						$('#plmessage').val('');
						$("#checkCodeDiv").hide();
						$("#textarea_text").show();	
						
				}//end write
			}// end success
		}); //end ajax	
		return true;	
    });	
	//隐藏文本框里面的提示
	$('#plmessage').on('click', function() {
		$("#checkCodeDiv").show();							   
		$("#textarea_text").hide();									   
    });	
	$('#textarea_text').on('click', function() {
		$("#checkCodeDiv").show();								   
