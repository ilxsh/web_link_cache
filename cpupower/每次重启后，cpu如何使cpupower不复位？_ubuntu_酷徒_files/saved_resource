//推荐和转帖
function kaixin(){
	
	var url = "http://www.kaixin001.com/~repaste/repaste.php";
	url += "?rtitle="+stitle;
	url += "&rurl="+encodeURIComponent(location.href);
	url += "&rcontent=";
	window.open(url);
}
function douban(){
	var url = "http://www.douban.com/recommend/";
	url += "?url="+encodeURIComponent(location.href);
	url += "&title="+stitle;
	window.open(url);
}
function facebook(){
	var url = "http://www.facebook.com/share.php";
	url += "?u="+encodeURIComponent(location.href);
	window.open(url);
}
function twitter(){
	var url = "http://twitter.com/home?status="+encodeURIComponent("看看这个文章："+location.href);
	window.open(url);
}
(function($){ 
	$.fn.extend({ 
		insertAtCaret: function(myValue){ 
			var $t=$(this)[0]; 
			if (document.selection) { 
				this.focus(); 
				sel = document.selection.createRange(); 
				sel.text = myValue; 
				this.focus(); 
			} 
			else 
			if ($t.selectionStart || $t.selectionStart == '0') { 
				var startPos = $t.selectionStart; 
				var endPos = $t.selectionEnd; 
				var scrollTop = $t.scrollTop; 
				$t.value = $t.value.substring(0, startPos) + myValue + $t.value.substring(endPos, $t.value.length); 
				this.focus(); 
				$t.selectionStart = startPos + myValue.length; 
				$t.selectionEnd = startPos + myValue.length; 
				$t.scrollTop = scrollTop; 
			} 
			else { 
				this.value += myValue; 
				this.focus(); 
			} 
		} 
	}) 
})(jQuery);	
