function getTime(){
		var d, s = "";
		var c = "";
		d = new Date();
		s += d.getYear()+c;
		s += (d.getMonth() + 1) + c;
		s += d.getDate() + c;
		s += d.getHours() + c;
		s += d.getMinutes() + c;
		s += d.getSeconds() + c;
		s += d.getMilliseconds();
		return s;
}
